<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.uzairkhan.DonationApplication.AdminViewActivity"
    tools:showIn="@layout/activity_admin_view">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="View volunteers"
        android:id="@+id/MakeadminButton" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Approve donation requests"
        android:id="@+id/AdminApproveDonationButton"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Issue emergency donation notification"
        android:id="@+id/AdminIssuenotificationButton"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add donation centre"
        android:id="@+id/AdminAddCentreButton"/>

</LinearLayout>
