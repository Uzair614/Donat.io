<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.uzairkhan.DonationApplication.AddCentreActivity"
    tools:showIn="@layout/activity_add_centre">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pick Place"
        android:id="@+id/placePickerButton"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/holo_green_light"
        android:id="@+id/outputPlacePicker"/>

    <CheckBox
        android:id="@+id/checkFoodCentre"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Food"
        android:textSize="20sp"
        android:typeface="serif"
        android:onClick="onCheckboxClickedCentre"/>

    <CheckBox
        android:id="@+id/checkMoneyCentre"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Money"
        android:textSize="20sp"
        android:typeface="serif"
        android:onClick="onCheckboxClickedCentre"/>

    <CheckBox
        android:id="@+id/checkBooksCentre"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Books"
        android:textSize="20sp"
        android:typeface="serif"
        android:onClick="onCheckboxClickedCentre"/>

    <CheckBox
        android:id="@+id/checkBloodCentre"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Blood"
        android:textSize="20sp"
        android:typeface="serif"
        android:onClick="onCheckboxClickedCentre"/>

    <CheckBox
        android:id="@+id/checkClothesCentre"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Clothes"
        android:textSize="20sp"
        android:typeface="serif"
        android:onClick="onCheckboxClickedCentre"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Send to server"
        android:id="@+id/sendButton"/>
</LinearLayout>
